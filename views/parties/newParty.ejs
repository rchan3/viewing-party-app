<%- include('../partials/header') %>

<main class="text-center" >
    <form action="/parties/new-party" method="post" class="w-40 p-3">
        <h1>Create a Party</h1>
        <div class="form-group">
            <label for="name">Event Name:</label>
            <input class="form-control" type="text" name="name" id="" placeholder="Event Name" autocomplete="off" required>
        </div>
         <div class="form-group">
            <label for="date">Event Time:</label>
            <input id="form-date" class="form-control" type="datetime-local" name="date" autocomplete="off" min="1111-01-01T00:00:00.00" required>
        </div>
         <div class="form-group">
            <label id="form-type">Event Type:</label>
            <input class="form-check-input" type="radio" name="type" value="Online">Online
            <input class="form-check-input" type="radio" name="type" value="Offline">Offline
        </div>
         <div class="form-group">
            <label for="name">Event Location:</label>
            <input class="form-control" type="text" name="address" id="" placeholder="Event Location" autocomplete="off">
        </div>
        
        <button class="btn btn-info"type="Submit">submit</button>
    </form>
</main>

<%- include('../partials/footer') %>


