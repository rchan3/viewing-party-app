<%- include('../partials/header') %>

<main>
    <form action="/parties/new-party" method="post">
         <div class="form-group">
            <label for="name">Event Name:</label>
            <input type="text" name="name" id="" placeholder="Event Name" required>
        </div>
         <div class="form-group">
            <label for="date">Event Time:</label>
            <input type="datetime-local" name="date" required>
        </div>
         <div class="form-group">
            <label>Event Type:</label>
            <input class="form-check-input" type="radio" name="type" value="Online">Online
            <input class="form-check-input" type="radio" name="type" value="Offline">Offline
        </div>
         <div class="form-group">
            <label for="name">Event Location:</label>
            <input type="text" name="address" id="" placeholder="Event Location">
        </div>
        
        <button type="Submit">submit</button>
    </form>
</main>

